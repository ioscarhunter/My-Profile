<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:paddingEnd="@dimen/l_item_margin"
    android:paddingStart="@dimen/l_item_margin">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <View
            android:id="@+id/timelineTopView"
            android:layout_width="4dp"
            android:layout_height="@dimen/xl_item_margin"
            android:layout_gravity="center"
            android:layout_marginBottom="-4dp"
            android:layout_weight="0"
            android:background="@drawable/bg_timeline_line" />

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/logoImageView"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:layout_weight="0"
            android:background="@drawable/bg_timeline_circle" />

        <View
            android:id="@+id/timelineBottomView"
            android:layout_width="4dp"
            android:layout_height="0dp"
            android:layout_gravity="center"
            android:layout_marginTop="-4dp"
            android:layout_weight="1"
            android:background="@drawable/bg_timeline_line" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/l_item_margin"
        android:layout_marginStart="@dimen/xl_item_margin"
        android:layout_marginTop="@dimen/xl_item_margin"
        android:orientation="vertical">

        <TextView
            android:id="@+id/yearText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/nameText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="" />

        <TextView
            android:id="@+id/detailText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

    </LinearLayout>

</LinearLayout>